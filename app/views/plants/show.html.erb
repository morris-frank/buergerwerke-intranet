<p class="title"><%= @plant.name %></p>
<p class="subtitle"><%= @cooperative.name %></>

<div class="level">
  <div class="level-left">
    <div class="level-item">
    <a href="<%= url_for controller: 'plants', action: 'index', cooperative_id: @cooperative.id %>">
      <span class="icon"><i class="fas fa-chevron-left"></i></span>
      <span><%= t 'back' %></span>
    </a>
    </div>
  </div>
  <div class="level-right">
    <% if can_edit %>
    <div class="level-item">
    <a href="<%= url_for controller: 'plants', action: 'edit', id: @plant, cooperative_id: @cooperative.id %>">
      <span class="icon"><i class="fas fa-edit"></i></span>
      <span><%= Plant.model_name.human %> <%= t 'edit' %></span>
    </a>
    </div>
    <% end %>
  </div>
</div>

<div class="columns">
  <div class="column is-6">
    <div class="panel">
      <p class="panel-heading"><%= @plant.name %></p>

      <p class="panel-block">
        <%= link_to @plant.cooperative.name, cooperative_path(@plant.cooperative) %>
      </p>

      <p class="panel-block">
        <%= Plant.human_attribute_name('peak_power') %>: <%= @plant.peak_power %>
      </p>

      <p class="panel-block">
        <%= Plant.human_attribute_name('annual_generation') %>: <%= @plant.annual_generation %>
      </p>

      <p class="panel-block">
        <%= Plant.human_attribute_name('plant_type') %>: <%= @plant.plant_type.humanize %></a>
      </p>
    </div>
  </div>
  <div class="column is-6">
    <% if @plant.description? %>
    <article class="message is-primary">
      <div class="message-body">
        <%= @plant.description %>
      </div>
    </article>
    <% end %>
  </div>
</div>
