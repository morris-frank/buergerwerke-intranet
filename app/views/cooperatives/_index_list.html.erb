<table id="cooperatives-table" class="table is-fullwidth is-striped is-hoverable">
  <thead>
    <tr>
      <th><%= Cooperative.human_attribute_name('Name') %></th>
      <th><%= Cooperative.human_attribute_name('City') %></th>
    </tr>
  </thead>
  <tbody>
  <% @cooperatives.each do |cooperative| %>
    <tr>
      <td><%= link_to cooperative.name, cooperative_path(cooperative) %></td>
      <td><%= cooperative.city %></td>
    </tr>
  <% end %>
  </tbody>
</table>
