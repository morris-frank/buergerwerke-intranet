<div class="column is-6 is-offset-3">
  <h2 class="title has-text-grey has-text-centered"><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <div class="control has-icons-left">
      <%= f.email_field :email, autofocus: true, class: "input", autocomplete: "email", placeholder: "E-Mail Adresse" %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <div class="control has-icons-left">
      <%= f.password_field :password, class: "input", autocomplete: "off", placeholder: 'Password' %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class: "checkbox" %>
      <%= f.label :remember_me, class: 'checkbox' %>
    </div>
  <% end -%>

  <div class="field">
    <div class="actions control">
      <%= f.submit t('.sign_in'), class: "button is-link is-fullwidth" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
