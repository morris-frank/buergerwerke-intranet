<% title 'Kundendaten der ' + @cooperative.name %>

<p class="title is-2"><%= yield :title %></p>


<div class="tabs is-boxed">
  <ul>
  <li>
  <a href="<%= url_for controller: 'cooperatives', action: 'show', id: @cooperative.id %>">
    <span class="icon"><i class="fas fa-chevron-left"></i></span>
    <span>zurück</span>
  </a>
  </li>

  <% if @cooperative.customer_data_pdf.attached? %>
  <li>
  <a href="<%= rails_blob_path(@cooperative.customer_data_pdf, disposition: "attachment") %>">
    <span class="icon"><i class="fas fa-cloud-download-alt"></i></span>
    <span>PDF</span>
  </a>
  </li>
  <% end %>
  </ul>
</div>

<% if @cooperative.customer_data_pdf.attached? %>
<object data="<%= rails_blob_path(@cooperative.customer_data_pdf) %>" type="application/pdf" width="100%" height="500px">
  Dieser Browser unterstützt keine PDFs. Bitte laden Sie das PDF herunter, um es zu sehen: <a href="<%= rails_blob_path(@cooperative.customer_data_pdf) %>">Download PDF</a>
</object>
<% end %>

<%= render "/table_filter" %>

<div class="tabs is-fullwidth">
  <ul>
  <li>
    Anzahl Kundendaten: <%= @cooperative.customer_count %>
  </li>
  <li>
    Letzte Aktualisierung Kundendaten: <%= (@cooperative.last_customer_update) ? (l @cooperative.last_customer_update) : 'nie' %>
  </li>
  </ul>
</div>

<div class="tags table-select">
  <% @attributes.each do |attribute| %>
  <span data-target="<%= attribute %>" class="tag<%= (@active_attributes.include? attribute) ? ' is-primary' : '' %>">
    <%= CustomerDatum.human_attribute_name(attribute) %>
  </span>
  <% end %>
</div>

<div class="table-container is-sticky">
<table class="table is-filterable is-fullwidth is-striped is-hoverable">
  <colgroup>
    <% @attributes.each do |attribute| %>
    <col class="<%= attribute %>" style="<%= (@active_attributes.include? attribute) ? '' : 'visibility: collapse;' %>">
    <% end %>
  </colgroup>

  <thead>
    <tr>
      <% @attributes.each do |attribute| %>
      <th class="<%= attribute %>"><%= CustomerDatum.human_attribute_name(attribute) %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
  <% @cooperative.customer_data.each do |cd| %>
    <tr>
      <% @attributes.each do |attribute| %>
      <td class="<%= attribute %>"><%= cd.read_attribute(attribute) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
